                        <input type="text" name="subject" required class="form-input" placeholder="What is this about?">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Message</label>
                        <textarea name="message" rows="5" required class="form-input" placeholder="Tell us how we can help you..."></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-full">Send Message</button>
                </form>
