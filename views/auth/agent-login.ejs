<%- include('../partials/header') %>

<div class="container" style="padding: 2rem 0;">
    <div class="form-container">
        <div style="text-align: center; margin-bottom: 2rem;">
            <div style="font-size: 4rem; margin-bottom: 1rem;">🏢</div>
            <h2 style="font-size: 2.5rem; margin-bottom: 1rem; color: #4f46e5;">Agent Login</h2>
            <p style="color: rgba(255, 255, 255, 0.7);">
                Access your agent dashboard to manage properties
            </p>
        </div>

        <form action="/auth/agent-login" method="POST">
            <div class="form-group">
                <label for="email" class="form-label">Email address</label>
                <input id="email" name="email" type="email" autocomplete="email" required class="form-input" placeholder="Enter your email">
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" type="password" autocomplete="current-password" required class="form-input" placeholder="Enter your password">
            </div>

            <button type="submit" class="btn btn-primary w-full">Sign in as Agent</button>
        </form>

        <div style="text-align: center; margin-top: 2rem;">
            <div style="position: relative; margin: 1.5rem 0;">
                <div style="position: absolute; inset: 0; display: flex; align-items: center;">
                    <div style="width: 100%; border-top: 1px solid rgba(255, 255, 255, 0.1);"></div>
                </div>
                <div style="position: relative; display: flex; justify-content: center;">
                    <span style="background: #0a0a0a; padding: 0 1rem; color: rgba(255, 255, 255, 0.7);">Other Options</span>
                </div>
            </div>

            <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                <a href="/auth/client-login" class="btn btn-secondary" style="flex: 1;">Client Login</a>
                <a href="/auth/agent-register" class="btn btn-secondary" style="flex: 1;">Register as Agent</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>