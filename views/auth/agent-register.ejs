<%- include('../partials/header') %>

<div class="container" style="padding: 2rem 0;">
    <div class="form-container">
        <div style="text-align: center; margin-bottom: 2rem;">
            <h2 style="font-size: 2.5rem; margin-bottom: 1rem; color: #667eea;">Create your agent account</h2>
            <p style="color: rgba(255, 255, 255, 0.7);">
                Already have an account?
                <a href="/auth/login" style="color: #667eea; text-decoration: none;">Sign in</a>
            </p>
        </div>

        <form action="/auth/agent-register" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="fullName" class="form-label">Full Name</label>
                <input id="fullName" name="fullName" type="text" required class="form-input">
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email address</label>
                <input id="email" name="email" type="email" autocomplete="email" required class="form-input">
            </div>

            <div class="form-group">
                <label for="phone" class="form-label">Phone Number</label>
                <input id="phone" name="phone" type="tel" required class="form-input">
            </div>

            <div class="form-group">
                <label for="commission" class="form-label">Commission Percentage (%)</label>
                <input id="commission" name="commission" type="number" min="0" max="100" step="0.1" required class="form-input">
                <p style="color: rgba(255, 255, 255, 0.6); font-size: 0.875rem; margin-top: 0.5rem;">Enter your commission rate (e.g., 5 for 5%)</p>
            </div>

            <div class="form-group">
                <label for="profilePicture" class="form-label">Profile Picture</label>
                <input id="profilePicture" name="profilePicture" type="file" accept="image/*" class="form-input">
            </div>

            <div class="form-group">
                <label for="bio" class="form-label">Bio / About</label>
                <textarea id="bio" name="bio" rows="3" class="form-input" placeholder="Tell clients about yourself and your experience..."></textarea>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" type="password" autocomplete="new-password" required class="form-input">
                <p style="color: rgba(255, 255, 255, 0.6); font-size: 0.875rem; margin-top: 0.5rem;">Must be at least 6 characters</p>
            </div>

            <button type="submit" class="btn btn-primary w-full">Create Agent Account</button>
        </form>

        <div style="margin-top: 2rem;">
            <div style="position: relative; margin: 1.5rem 0;">
                <div style="position: absolute; inset: 0; display: flex; align-items: center;">
                    <div style="width: 100%; border-top: 1px solid rgba(255, 255, 255, 0.3);"></div>
                </div>
                <div style="position: relative; display: flex; justify-content: center;">
                    <span style="background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%); padding: 0 1rem; color: rgba(255, 255, 255, 0.7);">Or register as</span>
                </div>
            </div>

            <a href="/auth/client-register" class="btn btn-secondary w-full">Register as Client</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>