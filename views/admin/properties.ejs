<%- include('../partials/header') %>

<div class="container" style="padding: 2rem 0;">
    <div style="margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem; color: #667eea;">üè† Manage Properties</h1>
        <p style="color: rgba(255, 255, 255, 0.8);">View and manage all properties on the platform</p>
    </div>

    <div class="card">
        <div style="padding: 1.5rem; border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
            <h2 style="font-size: 1.5rem; color: #667eea; margin: 0;">All Properties</h2>
        </div>
        
        <% if (properties && properties.length > 0) { %>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Agent</th>
                            <th>Location</th>
                            <th>Price</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Views</th>
                            <th>Listed</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% properties.forEach(property => { %>
                            <tr>
                                <td>
                                    <div style="display: flex; align-items: center;">
                                        <img src="/uploads/properties/<%= property.images[0] %>" alt="<%= property.title %>" style="width: 50px; height: 50px; border-radius: 8px; object-fit: cover; margin-right: 1rem;">
                                        <div>
                                            <p style="font-weight: 600; color: #ffffff; margin: 0;"><%= property.title %></p>
                                            <p style="font-size: 0.875rem; color: rgba(255, 255, 255, 0.7); margin: 0;"><%= property.description.substring(0, 50) %>...</p>
                                        </div>
                                    </div>
                                </td>
                                <td style="color: rgba(255, 255, 255, 0.8);"><%= property.agent.fullName %></td>
                                <td style="color: rgba(255, 255, 255, 0.8);"><%= property.location.area %>, <%= property.location.state %></td>
                                <td style="color: #51cf66; font-weight: 600;">‚Ç¶<%= property.price.toLocaleString() %></td>
                                <td style="color: rgba(255, 255, 255, 0.8);"><%= property.propertyType === 'rent' ? 'For Rent' : 'For Sale' %></td>
                                <td>
                                    <span style="padding: 0.25rem 0.75rem; border-radius: 12px; font-size: 0.75rem; font-weight: 600; <%= property.status === 'active' ? 'background: rgba(81, 207, 102, 0.2); color: #51cf66;' : property.status === 'sold' ? 'background: rgba(255, 107, 107, 0.2); color: #ff6b6b;' : 'background: rgba(255, 212, 59, 0.2); color: #ffd43b;' %>">
                                        <%= property.status.charAt(0).toUpperCase() + property.status.slice(1) %>
                                    </span>
                                </td>
                                <td style="color: #667eea; font-weight: 600;"><%= property.views %></td>
                                <td style="color: rgba(255, 255, 255, 0.6);"><%= new Date(property.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <a href="/property/<%= property._id %>" class="btn btn-sm btn-primary">View</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div style="padding: 3rem; text-center;">
                <div style="color: rgba(255, 255, 255, 0.7);">
                    <div style="font-size: 4rem; margin-bottom: 1rem;">üè†</div>
                    <p style="font-size: 1.25rem; margin-bottom: 1rem;">No properties found</p>
                    <p>Properties will appear here when agents upload them</p>
                </div>
            </div>
        <% } %>
    </div>

    <div style="text-align: center; margin-top: 2rem;">
        <a href="/admin/dashboard" class="btn btn-primary btn-lg">‚Üê Back to Dashboard</a>
    </div>
</div>

<%- include('../partials/footer') %>