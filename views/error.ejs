<%- include('partials/header') %>

<div class="container" style="padding: 4rem 0; text-align: center;">
    <div style="max-width: 600px; margin: 0 auto;">
        <div style="font-size: 6rem; margin-bottom: 2rem;">âš ï¸</div>
        <h1 style="font-size: 4rem; font-weight: bold; color: #ff6b6b; margin-bottom: 1rem;">Server Error</h1>
        <h2 style="font-size: 2rem; font-weight: 600; color: #ffffff; margin-bottom: 1rem;">Something went wrong</h2>
        <p style="color: rgba(255, 255, 255, 0.8); margin-bottom: 2rem; font-size: 1.1rem;">
            We're experiencing some technical difficulties. Please try again later or contact support if the problem persists.
        </p>
        
        <% if (typeof error !== 'undefined' && error && error.message) { %>
            <div style="background: rgba(255, 107, 107, 0.1); border: 1px solid rgba(255, 107, 107, 0.3); border-radius: 8px; padding: 1rem; margin-bottom: 2rem; text-align: left;">
                <strong style="color: #ff6b6b;">Error Details:</strong>
                <pre style="color: rgba(255, 255, 255, 0.8); margin-top: 0.5rem; white-space: pre-wrap; font-size: 0.9rem;"><%= error.message %></pre>
            </div>
        <% } %>
        
        <div style="display: flex; flex-direction: column; gap: 1rem; max-width: 400px; margin: 0 auto;">
            <a href="/" class="btn btn-primary btn-lg">ğŸ  Go to Homepage</a>
            <button onclick="window.location.reload()" class="btn btn-secondary">ğŸ”„ Try Again</button>
            <a href="/contact" class="btn btn-danger">ğŸ“ Contact Support</a>
        </div>
        
        <!-- Error Code -->
        <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid rgba(255, 255, 255, 0.1);">
            <p style="color: rgba(255, 255, 255, 0.5); font-size: 0.9rem;">
                Error Code: 500 | Time: <%= new Date().toISOString() %>
            </p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>